= render :partial => "shared/sidenav"
%main.container
    .row#projects-row
        - @projects.each do |proj|
            .col.m12.l6
                .card.small
                    .card-content.grey-text.text-darken-4
                        %span.card-title
                            = proj.name
                        %p
                            = proj.description
                    .card-action
                        %a{:href => "/projects/#{proj.id}"} Open
                        %a{:href => "#editModal",:id =>"editbut", :data => "#{proj.id}","data-turbolinks" => 'false'} Edit
                        %a.modal-trigger{:href => "#deleteModal",:id =>"deletebut",:data => "#{proj.id}", "data-turbolinks" => 'false'} Delete
                        
    .fixed-action-btn{:style => "bottom: 50px; right: 19px;"}
        %a.btn-floating.btn-large.modal-trigger{:href =>"#addModal"}
            %i.material-icons 
                add

= form_tag '#', id: "add" do 
    .modal#addModal
        .modal-content
            %h4 
                Add New Project
            .input-field
                %input{:type =>"text",:id => "name",:name => "name","data-error"=>".errorTxt1", :required =>""}
                %label{:for=>"title"}
                    Title 
                .errorTxt1
            .input-field
                %textarea.materialize-textarea{:id => "description", :name => "description", "data-error"=>".errorTxt2"}
                %label{:for=>"description"}
                    Description
                .errorTxt2
        .modal-footer
            %button.waves-effect.waves-teal.btn-flat{:type =>"submit",:name=>"action"}
                %span.orange-text
                    Submit
    = hidden_field_tag 'token', @current_user.token
    
= form_tag '#', id: "delete" do 
    .modal#deleteModal
        .modal-content
            %h4
                Please Confirm
            %p
                Are you sure to proceed?
        .modal-footer
            %button.waves-effect.waves-green.btn-flat{:type =>"submit",:name=>"action"}
                %span.orange-text
                    Yes
            %button.waves-effect.waves-red.btn-flat{:onclick =>"$('#deleteModal').modal('close');",:type =>"button"}    
                %span.orange-text
                    No
    = hidden_field_tag 'token', @current_user.token

= form_tag '#', id: "edit" do 
    .modal#editModal
        .modal-content
            %h4 
                Edit 
            .input-field
                %input{:type =>"text",:id => "name",:name => "name","data-error"=>".errorTxt1", :required =>""}
                %label{:for=>"title"}
                    Title 
                .errorTxt1
            .input-field
                %textarea.materialize-textarea{:id => "description", :name => "description", "data-error"=>".errorTxt2"}
                %label{:for=>"description"}
                    Description
                .errorTxt2
        .modal-footer
            %button.waves-effect.waves-teal.btn-flat{:type =>"submit",:name=>"action"}
                %span.orange-text
                    Submit
    = hidden_field_tag 'token', @current_user.token