.container
    .background-top.z-depth-1
    .background-bottom
.valign-wrapper
    .container  
        = form_tag login_path, id: "formLogin" do
            .row
                .col.s8.offset-s2
                    .card.white.darken-1
                        .card-content
                            %span.card-title
                                Login
                            %p
                                .input-field
                                    %input.validate{:type =>"email",:id => "email"}
                                    %label{:for=>"email"}
                                        Email   
                                .input-field
                                    %input.validate{:type =>"password",:id => "password"}
                                    %label{:for=>"password"}
                                        Password
                        .card-action
                            
                            %button.waves-effect.waves-teal.btn-flat
                                %span.orange-text
                                    Login
                            %a{:href =>"/register"}
                                %button.waves-effect.waves-teal.btn-flat
                                    %span.orange-text
                                        Register
                