
.valign-wrapper.grey.lighten-4{:style=>"width:100%;height:100%;position: absolute;"}
    .container  
        = form_tag login_create_path do
            .row
                .col.s8.offset-s2
                    .card.white.darken-1
                        .card-content
                            %span.card-title
                                Login
                            %p
                                .input-field
                                    %input.validate{:type =>"email",:id => "email"}
                                    %label{:for=>"email"}
                                        Email   
                                .input-field
                                    %input.validate{:type =>"password",:id => "password"}
                                    %label{:for=>"password"}
                                        Password
                        .card-action
                            
                            %button.waves-effect.waves-teal.btn-flat
                                %span.orange-text
                                    Login
                            %button.waves-effect.waves-teal.btn-flat{:id =>"toggle-button",:type =>"button"}
                                %span.orange-text
                                    Register
                